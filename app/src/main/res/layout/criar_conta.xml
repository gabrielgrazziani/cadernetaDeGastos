<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="30dp"        >

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar Conta"
            style="@style/titulo"/>

        <EditText
            android:id="@+id/userNameRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/text"
            android:hint="Nome de Usuario"
            android:inputType="textPersonName"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/text"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/phoneNumberRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/text"
            android:hint="Numero de Telefone"
            android:inputType="textPersonName"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/confirmPasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/text"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/emailRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/text"
            android:hint="Email"
            android:inputType="textPersonName"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnFinishRegister"
            android:onClick="btnCadastrar"
            android:text="Cadastrar"
            style="@style/botao"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ou se jÃ¡ tem uma conta"
            style="@style/text"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnGoForLogin"
            android:onClick="btnEntrar"
            style="@style/botao"
            android:text="Entrar"
            android:layout_margin="10dp"/>

    </LinearLayout>

</ScrollView>